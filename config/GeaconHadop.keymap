#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/bt.h>
#include "layout_shift.dtsi"

#define MOUSE 2
#define SCROLL 3
#define BT 4

&mt {
	flavor = "tap-preferred";
};

/ {
    behaviors {
        // Keep the original key_press behavior for ZMK core components
        original_key_press: original_key_press {
            compatible = "zmk,behavior-key-press";
            #binding-cells = <1>;
            label = "KEY_PRESS";
        };

        // Override the existing &kp behavior to use our custom implementation
        kp: key_press {
            compatible = "zmk,behavior-layout-shift-key-press";
            #binding-cells = <1>;
            label = "LAYOUT_SHIFT_KEY_PRESS";
        };
    };
};

/ {
	keymap {
		compatible = "zmk,keymap";
		default_layer {
			display-name="Def";
			bindings = <
			&kp N1         &kp N2    &kp N3     &kp N4     &kp N5     &kp N6       &kp N7    &kp N8     &kp N9     &kp N0     &kp BKSP
			&kp TAB        &kp Q     &kp W      &kp E      &kp R      &kp T        &kp Y     &kp U      &kp I      &kp O      &kp P     &kp LBKT
			&lt 4 CAPS     &kp A     &kp S      &kp D      &kp F      &kp G        &kp H     &kp J      &kp K      &kp L      &kp SEMI  &kp SQT
			&kp LSHFT      &kp Z     &kp X      &kp C      &kp V      &kp B        &kp N     &kp M      &kp COMMA  &kp DOT    &kp UP
			&mt LCTL ESC   &kp LGUI  &kp LALT   &kp SPACE  &lt 1 SPACE   &lt 1 SPACE                               &kp LEFT   &kp DOWN  &kp RIGHT
			>;
		};
		
		function_layer {
			display-name="Fnc";
			bindings = <
			&kp F1        &kp F2     &kp F3     &kp F4     &kp F5     &kp F6       &kp F7    &kp F8     &kp F9     &kp F10    &kp F11
			&tog_ls       &kp PG_UP  &kp UP     &kp PG_DN  &kp HOME   &trans       &trans    &trans     &trans     &trans     &kp F12   &trans
			&trans        &kp LEFT   &kp DOWN   &kp RIGHT  &kp END    &trans       &trans    &trans     &trans     &trans     &trans    &trans
			&trans        &kp BKSP   &kp DEL    &trans     &trans     &trans       &trans    &trans     &trans     &trans     &trans
			&trans        &trans     &kp LALT   &kp ENTER  &kp ENTER   &kp ENTER                                     &trans   &trans   &trans
			>;
		};
		
		mouse_layer {
			display-name="Mouse";
			bindings = <
			&trans        &trans     &trans     &trans     &trans     &trans       &trans    &trans     &trans     &trans     &trans
			&trans        &trans     &trans     &trans     &trans     &trans       &trans    &trans     &trans     &trans     &trans    &trans
			&trans        &trans     &trans     &trans     &trans     &trans       &trans    &trans     &trans     &trans     &trans    &trans
			&trans        &trans     &trans     &trans     &trans     &trans       &trans    &mkp MB1   &mkp MB3  &mkp MB2    &trans
			&trans        &trans     &trans     &trans     &trans     &trans                                         &trans   &trans   &trans
			>;
		};
		
		scroll_layer {
			display-name="Scr";
			bindings = <
			&trans        &trans     &trans     &trans     &trans     &trans       &trans    &trans     &trans     &trans     &trans
			&trans        &trans     &trans     &trans     &trans     &trans       &trans    &trans     &trans     &trans     &trans    &trans
			&trans        &trans     &trans     &trans     &trans     &trans       &trans    &trans     &trans     &trans     &trans    &trans
			&trans        &trans     &trans     &trans     &trans     &trans       &trans    &mkp MB1   &mkp MB3  &mkp MB2    &trans
			&trans        &trans     &trans     &trans     &trans     &trans                                         &trans   &trans   &trans
			>;
		};
		
		bt_layer {
			display-name="BT";
			bindings = <
			&bt BT_CLR     &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4  &trans   &trans   &trans   &trans   &trans
			&trans        &trans     &trans     &trans     &trans     &trans       &trans    &trans     &trans     &trans     &trans    &trans
			&trans        &trans     &trans     &trans     &trans     &trans       &trans    &trans     &trans     &trans     &trans    &trans
			&trans        &trans     &trans     &trans     &trans     &trans       &trans    &mkp MB1   &mkp MB3  &mkp MB2    &trans
			&trans        &trans     &trans     &trans     &trans     &trans                                         &trans   &trans   &trans
			>;
		};
	};
};
